{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "assets.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}